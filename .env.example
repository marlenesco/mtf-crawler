# MTF-Crawler Configuration
# Copy this file to .env and customize the values

# ===========================================
# CRAWLER CONFIGURATION
# ===========================================

# User Agent for web requests (constitutional requirement)
MTF_USER_AGENT=mytechfun-research-bot/1.0 (contact: your-email@example.com)

# Rate limiting configuration (seconds between requests)
MTF_RATE_LIMIT_DELAY=1.0
MTF_MAX_RETRIES=3
MTF_RETRY_BACKOFF_FACTOR=2.0

# Maximum concurrent requests (keep low for respectful crawling)
MTF_MAX_CONCURRENT_REQUESTS=1

# ===========================================
# TARGET CONFIGURATION
# ===========================================

# Default base URL for crawling
MTF_BASE_URL=https://www.mytechfun.com/videos/material_test

# Default maximum posts to process (0 = unlimited)
MTF_MAX_POSTS=0

# Skip file downloads (true/false)
MTF_SKIP_FILES=false

# ===========================================
# STORAGE CONFIGURATION
# ===========================================

# Base directory for all data storage
MTF_DATA_DIR=data

# Subdirectories
MTF_RAW_DIR=data/raw
MTF_DISCOVERY_DIR=data/discovery
MTF_PROCESSED_DIR=data/processed
MTF_LOGS_DIR=data/logs

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Log level (DEBUG, INFO, WARNING, ERROR)
MTF_LOG_LEVEL=INFO

# Enable structured JSON logging (true/false)
MTF_JSON_LOGGING=true

# Log file rotation settings
MTF_LOG_MAX_BYTES=10485760
MTF_LOG_BACKUP_COUNT=5

# ===========================================
# PARSING CONFIGURATION
# ===========================================

# Valid file extensions to download (comma-separated)
MTF_VALID_EXTENSIONS=.xlsx,.xls,.csv

# Ignored file extensions (comma-separated)
MTF_IGNORED_EXTENSIONS=.stl,.zip,.jpg,.jpeg,.png,.gif,.pdf

# Quality rating thresholds (0-100)
MTF_QUALITY_OK_THRESHOLD=80
MTF_QUALITY_WARN_THRESHOLD=20

# ===========================================
# CONSTITUTIONAL COMPLIANCE
# ===========================================

# Enable robots.txt checking (true/false)
MTF_RESPECT_ROBOTS_TXT=true

# Enable constitutional compliance validation (true/false)
MTF_VALIDATE_COMPLIANCE=true

# Attribution text (constitutional requirement)
MTF_ATTRIBUTION_TEXT=Data © MyTechFun – Dr. Igor Gaspar, CC BY 4.0

# License information
MTF_LICENSE=CC BY 4.0
MTF_LICENSE_URL=https://creativecommons.org/licenses/by/4.0/
